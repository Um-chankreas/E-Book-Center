<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linear_head"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/background_login"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/login_bac"
        android:scaleType="fitXY"/>
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/logo_login"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:layout_marginTop="-160sp"
            android:src="@drawable/login"
            />
        <TextView
            android:id="@+id/text_login"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="Get Your Book Everywhere"/>
            <ImageView
                android:id="@+id/login_head"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_line_head"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_login_or_sign_up"
            android:text="Login or Sign Up"
            android:textSize="25sp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_below="@+id/linear_head"/>
        <LinearLayout
            android:id="@+id/linear_edit_text"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_login_or_sign_up">
        <EditText
            android:id="@+id/edit_text_login_email"
            android:layout_width="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:hint="Email"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:fontFamily="sans-serif-condensed"
            android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_text_login_password"
                android:layout_width="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:hint="Password"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/forgot_pass"
                android:textColor="@color/blue"
                android:text="Forgot Password?"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="25sp"
                android:text="Login"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/btn_login"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/or_line"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/or_line"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_con_eamil"
                android:layout_width="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="15sp"
                android:text="Sign Up With Email"
                android:background="@drawable/btn_signup"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="wrap_content"/>
            <com.google.android.gms.common.SignInButton
                android:id="@+id/btn_to_google"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>